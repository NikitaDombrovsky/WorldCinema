<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AuthorizationScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/splashScreen"
                android:layout_marginTop="40dp"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/launch_screen_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <EditText
                android:id="@+id/Reg_Text_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:hint="@string/txtName"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/gray"
                app:hintTextColor="@color/gray"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceBody1"
                />
            <EditText
                android:id="@+id/Reg_Text_SurName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:hint="@string/txtSurname"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/gray"
                app:hintTextColor="@color/gray"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceBody1"
                />
            <EditText
                android:id="@+id/Reg_Text_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:hint="@string/txtInputEmail"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/gray"
                app:hintTextColor="@color/gray"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceBody1"
                />
            <EditText
                android:id="@+id/Reg_Text_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:hint="@string/txtInputPassword"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/gray"
                app:hintTextColor="@color/gray"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceBody1"
                />
            <EditText
                android:id="@+id/Reg_Text_ResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:textSize="12dp"
                android:hint="@string/txtResetPassword"
                android:textColorHint="@color/gray"
                app:boxStrokeColor="@color/gray"
                app:hintTextColor="@color/gray"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:ellipsize="end"
                android:textAppearance="?textAppearanceBody1"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/Reg_Button_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border_orange"
                android:text="@string/txtRegistrartion"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Reg_Button_Enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/border"
                android:ellipsize="end"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="@string/txtNoRegistration"
                android:textColor="@color/orange"
                android:textColorHighlight="#9C9090"
                android:textColorHint="#9C9090"
                app:boxStrokeColor="#9C9090" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

    <!-- style="@style/Widget.MaterialComponents.Button.OutlinedButton" -->