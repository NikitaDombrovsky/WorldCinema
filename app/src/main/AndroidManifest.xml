<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.worldcinema">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_ws"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WorldCinema">
        <activity
            android:name=".Main.MainActivity"
            android:exported="true">
        </activity>
        <activity android:name=".Login.AuthorizationScreen"
            android:exported="true">

        </activity>
        <activity android:name=".Login.RegistrationScreen"
            android:exported="true">

        </activity>
        <activity android:name=".Main.LaunchScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Chat.DiscussionActivity"
            android:exported="true"/>
        <activity android:name=".Collection.CreateCollection"
            android:exported="true"/>
        <activity android:name=".Collection.ChooseIconActivity"
            android:exported="true"/>

    </application>


</manifest>
